@model ELUsuario
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <title> Clínica Ricardo Palma </title>
    <link rel="shortcut icon" href="~/Assets/favicon.ico" />

    <!-- META INFO -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="Una Red Social Para Programadores" />
    <meta name="generator" content="Hermes CMS" />


    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/bootstrap-theme.min.css" rel="stylesheet" />

    <link href="~/Assets/css/style.css" rel="stylesheet" />


    <!-- jQuery -->
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>

    <script src="~/Assets/js/bootstrap.min.js"></script>
    <script src="~/Assets/js/jquery.form.js"></script>
    <script src="~/Assets/js/ini.js"></script>

    <!-- Microsoft -->
    <script src="~/Assets/js/jquery.validate.min.js"></script>
    <script src="~/Assets/js/jquery.validate.unobtrusive.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">



</head>
<body>

    <script>
        function base_url(url)
        {
            return '@(Url.Content("~/"))' + url;
        }
        function redirect(href) {
                window.location.href = '@(Url.Content("~/"))' + href;
        }
    </script>


    <div class="container col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
        <br />
        <div class="panel panel-default">
            <div class="form-group text-center">
                <div class="logo">
                    <img src="~/Assets/css/images/Logo.png" alt="" width="209" height="101"/>
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Acceder", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user" style="width: auto"></i>
                            </span>
                            @Html.TextBoxFor(model => model.Login, new { @class = "form-control input-lg", placeholder = "Ingrese usuario", maxlength = 50 })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-lock" style="width: auto"></i>
                            </span>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", placeholder = "Ingrese Contraseña", maxlength = 10 })
                        </div>
                    </div>
                    <button class="btn btn-lg btn-block btn-exclusive" name="Submit" value="Entrar" type="Submit" data-ajax="true">Ingresar</button>
                }
                
            </div>
        </div>
    </div>


    <div class="container">

    </div>



    <div class="text-center">Desarrollado por <b><a href="http://www.anexsoft.com" target="_blank"> Oozma Kappa</a></b></div>
</body>
</html>