@{
    ViewBag.Title = ViewBag.nombrePage;
}
<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue-hoki bold uppercase">Registro Orden de Intervención</span>
        </div>
    </div>
    <div class="portlet-body form">
        <div class="horizontal-form">
            <div class="form-body">
                <div class="row">
                    <form id="form_buscar_paciente" class="form-group" autocomplete="off">
                        <label class="col-md-1 control-label">Documento</label>
                        <div class="col-md-3">
                                <input id="documento" name="documento" class="form-control" type="text" placeholder="Documento" />
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <button id="buscarPaciente" class="btn btn-exclusive" type="submit">
                                    Buscar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <form id="form_datos_paciente">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Apellido Paterno</label>
                                <input name="cApePaterno" type="text" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Apellido Paterno</label>
                                <input name="cApeMaterno" type="text" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Nombres</label>
                                <input name="cNombres" type="text" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Historia Clínica</label>
                                <input name="cNroHistoriaClinica" type="text" class="form-control" disabled>
                            </div> 
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Fecha Nacimiento</label>
                                <input name="cFechaNacimiento" type="text" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Edad</label>
                                <input name="nEdad" type="text" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Sexo</label>
                                <input name="cSexo" type="text" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover order-column" id="tableNoPaging">
                        <thead>
                            <tr>
                                <th class="novis"> IdOrden </th>
                                <th> Nro.Orden </th>
                                <th> Sexo </th>
                                <th> Fecha de Intervención </th>
                                <th>Tipo Intervención</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        Fecha de Intervencion
                        <div class="date-picker" data-date-format="mm/dd/yyyy"> </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Sede</label>
                            <select id="cboSede" name="cboSede" class="form-control">
                             
                            </select>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Zona</label>
                            <select id="cboZona" name="cboZona" class="form-control">
                              
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Sala</label>
                            <select id="cboSala" name="cboSala" class="form-control">
                              
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Hab.Reposo</label>
                            <select id="cboHabReposo" name="cboHabReposo" class="form-control">
                               
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions right">
                 <a class="btn default" href="~/ointervencion/index">Cancelar</a>
                <button id="btnRegistrarOrden" type="submit" class="btn btn-exclusive">
                    Registrar
                </button>
            </div>
        </div>
    </div>
</div>